{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext", "dom"],
		"allowJs": false,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@haydn-editor/*": ["src/pages/write/editor/*"]
		}
	},
	"include": ["src", "node_modules/@types/node/buffer.d.ts", "node_modules/@types/node/buffer.d.ts", "node_modules/@types/node/buffer.d.ts", "node_modules/@types/node/buffer.d.ts", "node_modules/@types/node/buffer.d.ts"]
}
