root = true # 控制配置文件 .editorconfig 是否生效

[**] # 匹配全部文件
indent_style = space # 使用空格缩进
indent_size = 4 # 单级缩进为 4 个空格
tab_width = 4 # 制表符显示宽度为 4 个空格
charset = utf-8 # 文件使用 UTF-8 编码
trim_trailing_whitespace = true # 删除行尾空白
insert_final_newline = true # 文件末尾保留一个换行
end_of_line = lf # 使用 LF 作为行结束符
max_line_length = 120 # 单行最大长度为 120
